@model AustPIC.Models.EventModel

@{
    ViewData["Title"] = "Workshop Detail";
    Layout = "~/Views/Shared/_LayoutInnerDetail.cshtml";
}

<section id="breadcrumbs" class="breadcrumbs">
    <div class="container">
        <ol>
            <li><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li><a asp-action="Index">Workshop</a></li>
            <li>Workshop Details</li>
        </ol>
        <h2>Workshop Details</h2>
    </div>
</section>

<section class="inner-page">
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <div class="card">
                    <img class="card-img-top" src=~/@Model.EventImg alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">@Model.EventTitle</h5>
                        <p class="card-text">@Model.EventDesc</p>
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                Workshop Status :
                @if (DateTime.Now <= Model.EventStart)
                {
                        <small class="rounded bg-success text-light p-1">Upcoming</small>
                }
                else if (DateTime.Now >= Model.EventStart && DateTime.Now <= Model.EventEnd)
                {
                        <small class="rounded bg-info text-light p-1">Ongoing</small>
                }
                else
                {
                        <small class="rounded bg-secondary text-light p-1">Ended</small>
                }
                <p>Workshop Start : @Model.EventStart </p>
                <p>Workshop End : @Model.EventEnd </p>
                <a href="#" class="btn btn-primary">Going To Event</a>
            </div>

        </div>
    </div>
</section>

